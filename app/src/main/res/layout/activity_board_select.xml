<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoardSelect">

    <TextView
        android:id="@+id/tv_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        android:text="제목"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_select_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="내용"
        app:layout_constraintStart_toStartOf="@+id/tv_select_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_select_id" />

    <TextView
        android:id="@+id/tv_select_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="아이디"
        app:layout_constraintStart_toStartOf="@+id/tv_select_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_select_title" />

    <TextView
        android:id="@+id/tv_select_signdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="작성시간"
        app:layout_constraintStart_toStartOf="@+id/tv_select_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_select_content" />

</androidx.constraintlayout.widget.ConstraintLayout>