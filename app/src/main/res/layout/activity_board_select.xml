<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoardSelect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="공지사항 게시판"
            android:textSize="22sp"
            android:textStyle="bold"
            android:translationY="90sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp"
            android:translationY="100sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:background="#4EFF9800"
                        android:gravity="center"
                        android:text="제목"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_select_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="제목"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:background="#4EFF9800"
                        android:gravity="center"
                        android:text="내용"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_select_content"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:text="내용"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:background="#4EFF9800"
                        android:gravity="center"
                        android:text="작성자"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_select_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="아이디"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:background="#4EFF9800"
                        android:gravity="center"
                        android:text="시간"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_select_signdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="작성시간"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="269dp"
                    android:layout_height="134dp"
                    android:layout_gravity="center"
                    android:translationY="30sp"
                    app:srcCompat="@drawable/question" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="공지사항 관련 문의사항이 있으시다면 관리자 연락처로 연락해주세요"
                    android:textSize="16sp"
                    android:translationY="35sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>