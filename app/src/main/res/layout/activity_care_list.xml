<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareList">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/carelist_customview"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/carelist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="성함"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/carelist_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="주소"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/carelist_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="전화번호"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/carelist_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="특이사항"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/carelist_customview"
        android:layout_width="411dp"
        android:layout_height="676dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>